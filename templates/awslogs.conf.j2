[general]
state_file = {{ cw_logs_state_file }}
logging_config_file = {{ cw_logs_config_file }}
use_gzip_http_content_encoding = {{ cw_logs_use_gzip }}

{% for log in cw_logs_files %}

[{% if log.name is defined %}{{ log.name }}{% else %}{{ log.file }}{% endif %}]
file = {{ log.file }}
log_group_name = {% if log.log_group_name is defined %}{{ log.log_group_name }}
{% else %}{{ log.file }}
{% endif %}
log_stream_name = {% if log.log_stream_name is defined %}{{ log.log_stream_name }}
{% else %}{hostname}
{% endif %}
datetime_format = {% if log.datetime_format is defined %}{{ log.datetime_format }}
{% else %}{{ default_datetime_format }}
{% endif %}
time_zone = {% if log.time_zone is defined %}{{ log.time_zone }}
{% else %}{{ default_time_zone }}
{% endif %}
encoding = {% if log.encoding is defined %}{{ log.encoding }}
{% else %}{{ default_encoding }}
{% endif %}
{% if log.extra_args is defined %}
{% for key, value in log.extra_args.values() %}
{{ key }} = {{ value }}
{% endfor %}
{% endif %}
{% endfor %}
